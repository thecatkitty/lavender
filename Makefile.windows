ARCHPFX = i686-w64-mingw32

CC      = $(ARCHPFX)-gcc
LD      = $(ARCHPFX)-gcc
OBJCOPY = $(W32OBJCOPY)
WINDRES = $(W32WINDRES)

EXTSDL  = ext/SDL2-2.28.3/$(ARCHPFX)
EXTTTF  = ext/SDL2_ttf-2.20.2/$(ARCHPFX)

WINLIBS = -lusp10 -lgdi32 -limm32 -lole32 -loleaut32 -lrpcrt4 -lsetupapi -lshell32 -lversion -lwinmm
SDLLIBS = -lSDL2main $(EXTSDL)/lib/libSDL2.a $(EXTTTF)/lib/libSDL2_ttf.a

CFLAGS += -Iext/include/
LDFLAGS = -mwindows -s -L$(EXTSDL)/lib -L$(EXTTTF)/lib $(SDLLIBS) $(WINLIBS)

OBJFMT  = elf32-i386
EXESUFF = .exe
SRODATA = .rdata
OBJREQS =
